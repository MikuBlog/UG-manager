.home {
  position: relative;
  background: #f4f4f4;
}

.home-box {
  position: relative;
  text-align: center;
}

.home-box-head {
  line-height: 70px;
  font-size: 20px;
  text-align: left;
  text-indent: 30px;
  background: #fff;
}

.home-box-background {
  position: relative;
  height: 400rpx;
}

.home-box-background>image {
  width: 100%;
  height: 100%;
}

.home-box-button {
  display: flex;
  position: relative;
  top: -3px;
  background: #fff;
}

.button-box {
  position: relative;
  margin: 20rpx 0;
  flex: 1;
}

.button-box-icon {
  position: relative;
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.button-box i {
  font-size: 40rpx;
  line-height: 120rpx;
  color: white;
}

.button-box .fa-mobile-phone {
  font-size: 55rpx;
}

.button-box-content {
  margin-top: 15rpx;
  font-size: 25rpx;
  font-weight: bold;
}

.first {
  background: #6799fd;
}

.second {
  position: relative;
  background: #ff9866;
}

.second>i {
  position: relative;
  top: 2rpx;
}

.third {
  background: #9999cb;
}

.home-box-help {
  position: relative;
  margin-top: 10rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}

.help-box {
  position: relative;
  height: 200rpx;
  margin: 15rpx 10rpx;
  flex: 1;
  line-height: 200rpx;
}

.help-box>image {
  position: relative;
  vertical-align: middle;
  height: 80%;
  width: 100%;
}

.home-box-background-second {
  position: relative;
  height: 400rpx;
  margin-top: 10rpx;
}

.home-box-background-second>image {
  width: 100%;
  height: 100%;
}

.home-show-message {
  position: relative;
  top: -5rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  font-size: 15px;
}

.message-box {
  position: relative;
  margin: 10px 0;
  flex: 1;
}

.message-box>image {
  width: 80rpx;
  height: 80rpx;
}

.message-box>.message-box-content {
  position: relative;
  color: #a7a6a6;
}

.home-bottom-button {
  position: relative;
  background: #fff;
  display: flex;
  justify-content: space-around;
  color: #a7a6a6;
}

.home-bottom-button .button-box {
  position: relative;
  margin: 15rpx 0 10rpx 0;
}

.home-bottom-button .button-box i {
  font-size: 45rpx;
  color: #a7a6a6;
  line-height: 20px;
}

.home-bottom-button .button-box view {
  position: relative;
  font-size: 25rpx;
  margin-top: 8px;
}
