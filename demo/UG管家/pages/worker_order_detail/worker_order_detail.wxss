.worker-order-detail {
  position: relative;
  background: #f4f4f4;
}

.order-detail-box {
  position: relative;
  text-align: center;
  overflow: hidden;
}

.order-box-form {
  position: relative;
  margin-top: 85px;
  text-align: left;
}

.order-head {
  position: relative;
  color: #6d6d6d;
  font-size: 18px;
  margin: 15px 0 15px 15px;
}

.order-price-box {
  position: relative;
  background: #fff;
  overflow: hidden;
}

.order-price {
  margin: 15px 0 15px 15px;
  font-size: 17px;
}

.order-status-box {
  position: relative;
  background: #fff;
  overflow: hidden;
}

.order-status {
  margin: 15px 0 15px 15px;
  font-size: 17px;
}

.order-position-box {
  position: relative;
  background: #fff;
  overflow: hidden;
}

.order-position {
  margin: 7px 0 7px 15px;
  font-size: 17px;
}

.order-person {
  margin: 7px 0 10px 15px;
  color: #9e9e9e;
}

.order-person span {
  margin-right: 15px;
}

.order-time-box {
  position: relative;
  background: #fff;
  overflow: hidden;
}

.order-time {
  font-size: 17px;
  margin: 15px 0 15px 15px;
  color: #000;
}

.order-type-box {
  position: relative;
  background: #fff;
  overflow: hidden;
}

.order-type {
  font-size: 17px;
  margin: 20px 0 20px 15px;
  color: #000;
}

.order-description-box {
  position: relative;
  background: #fff;
  overflow: hidden;
}

.order-description {
  font-size: 17px;
  margin: 15px 0 15px 15px;
}

.order-remark-box {
  position: relative;
  background: #fff;
  overflow: hidden;
}

.order-remark {
  font-size: 17px;
  margin: 15px 0 15px 15px;
}

.order-photo-box {
  position: relative;
  overflow: hidden;
  background: #fff;
  height: 150px;
  line-height: 150px;
}

.order-photo-box image {
  position: relative;
  vertical-align: middle;
  margin-left: 20px;
  width: 100px;
}

.order-button-box {
  position: relative;
  text-align: center;
}

.order-button {
  position: relative;
  margin: 15px auto;
  width: 90%;
  line-height: 50px;
  font-size: 15px;
  font-weight: bold;
  background-color: #fefefe;
  border-radius: 5px;
  color: #306797;
}

.order-button:first-of-type {
  background-color: #33689b;
  color: #fff;
}

.order-history-box {
  position: relative;
  overflow: hidden;
  color: #9e9e9e;
}

.order-history-head {
  font-size: 17px;
  margin: 15px 0 7px 15px;
}

.order-history-list {
  font-size: 15px;
  margin: 0 0 15px 15px;
}

.order-box-warn {
  position: fixed;
  text-align: center;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 99;
  background: rgba(0, 0, 0, 0.5);
}

.warn-box {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  width: 580rpx;
  height: 300rpx;
  background: #fff;
  border-radius: 10rpx;
}

.warn-head {
  position: relative;
  font-size: 17px;
  font-weight: bold;
  margin-top: 60rpx;
}

.warn-content {
  position: relative;
  color: #989898;
  margin-top: 20rpx;
}

.warn-button {
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  border-top: 1px solid #dfdfe1;
}

.warn-button view {
  position: relative;
  flex: 1;
  line-height: 80rpx;
}

.warn-button  view:first-of-type {
  color: #a9a9a9;
}

.warn-button  view:last-of-type {
  color: #07c319;
}

.order-setprice-box {
  position: relative;
}

.order-setprice-box input {
  outline: none;
  border: none;
  text-indent: 25rpx;
  font-size: 35rpx;
  height: 50px;
  width: 100%;
}

.form-box {
  border-top: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
}
